        android:textColor="#FF0000"
        android:textSize="8pt"
        android:id="@+id/redAsterix3"
        android:layout_toRightOf="@id/confirmPass"
        android:layout_below="@id/textView3"
        android:layout_marginTop="25dp"/>
    <TextView
